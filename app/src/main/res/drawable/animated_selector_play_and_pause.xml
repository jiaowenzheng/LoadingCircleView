<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/play"
        android:state_selected="false"
        android:drawable="@drawable/play_1"/>

    <item
        android:id="@+id/pause"
        android:drawable="@drawable/pause_1"
        android:state_selected="true"
        />

    <transition
        android:fromId="@id/play"
        android:toId="@id/pause"
        android:drawable="@drawable/animated_vector_play_to_pause_1"
        />

    <transition
        android:fromId="@id/pause"
        android:toId="@id/play"
        android:drawable="@drawable/animated_vector_pause_to_play_1"
        />

</animated-selector>